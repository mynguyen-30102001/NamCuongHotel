@section script{
    <script>
        $(document).ready(function () {

            // setup datepicker date_in & out
            $("#dbook_in").daterangepicker({
                singleDatePicker: true,
                autoApply: true,
                minDate: moment(),
                locale: {
                    format: 'DD/MM/YYYY'
                }
            });

            $("#dbook_out").daterangepicker({
                singleDatePicker: true,
                autoApply: true,
                // minDate: moment(),
                minDate: moment().add(1, "days"),
                locale: {
                    format: 'DD/MM/YYYY'
                }
            });

            // transmit data form "input date" to "span tag"

            var months = ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6", "Tháng 7", "Tháng 8", "Tháng 9", "Tháng 10", "Tháng 11", "Tháng 12"];

            function set_time_in() {
                var book_in = $("#dbook_in").val();

                $(".b-date_in").text(book_in.substring(0, 2));
                var b_month = Number(book_in.substring(3, 5));
                $(".b-month_in").text(months[b_month - 1]);
                $(".b-year_in").text(book_in.substring(6, 10));
            }

            set_time_in();

            function set_time_out() {
                var book_out = $("#dbook_out").val();
                $(".b-date_out").text(book_out.substring(0, 2));
                var b_month = Number(book_out.substring(3, 5));
                $(".b-month_out").text(months[b_month - 1]);
                $(".b-year_out").text(book_out.substring(6, 10));

            }

            set_time_out();

            $("#dbook_in").on("apply.daterangepicker", function (e, picker) {
                set_time_in();
                var mindate = $(this).val();
                // console.log(typeof mindate);
                var date = moment(mindate, "DD/MM/YYYY");

                $("#dbook_out").daterangepicker({
                    minDate: date,
                    // minDate:mindate,
                    startDate: date.add(1, "days"),
                    singleDatePicker: true,
                    autoApply: true,
                    locale: {
                        format: 'DD/MM/YYYY'
                    }
                });
            });

            $("#dbook_out").on("change", function (e, picker) {
                set_time_out();
            });

            $(".date_in").click(function (e) {
                $("#dbook_in").focus();
            });

            $(".change-info").click(function (e) {
                $("#dbook_in").focus();
            });

            $(".date_out").click(function (e) {
                $("#dbook_out").focus();
            });


            // - change number adult, child
            $(".adult_num").text($("#Adult").val());
            $(".child_num").text($("#Child").val());

            $(".b-select").change(function () {
                var num_people = $(this).val();
                console.log(num_people);
                $(this).parent(".b-info-number").find(".b-number").text(num_people);
            });
        })
    </script>
