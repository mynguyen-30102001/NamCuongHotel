@using ProjectLibrary.Database
@using TeamplateHotel.Controllers
@using TeamplateHotel.Handler
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    Hotel hotel = CommentController.DetailHotel(Request.Cookies["LanguageID"].Value);
    Menu menu = ViewBag.Menu ?? new Menu();
}

    <div class="banner-page">
        <div class="banner__item">
            <div class="banner__img"><img src="@menu.Image" alt=""></div>
            <div class="banner__caption">
                <h1 class="animate__animated">@menu.Title</h1>
            </div>
        </div>
    </div>
    <section class="contact-main">
        <div class="container">
            <div class="row justify-content-center">
                <div class="contact-wp m-lg-5 m-1">
                    <div class="row no-gutters ">
                        <div class="col-lg-5 ct-left d-flex">
                            <div class="info-wrap p-md-5 p-3">
                                <h3 class="ct-title">Let's get in touch</h3>
                                <p class="mb-4">We're open for any suggestion or just to have a chat</p>
                                <div class="info-box">
                                    <div class="info-icon">
                                        <span class="fa fa-map-marker"></span>
                                    </div>
                                    <div class="info-text pl-3">
                                        <p><span class="info-title">Địa chỉ:</span> @hotel.Address</p>
                                    </div>
                                </div>
                                <div class="info-box">
                                    <div class="info-icon">
                                        <span class="fa fa-phone"></span>
                                    </div>
                                    <div class="info-text pl-3">
                                        <p>
                                            <span class="info-title">Điện Thoại:</span> <a href="tel://@hotel.Tel">
                                               @hotel.Tel
                                            </a>
                                        </p>
                                    </div>
                                </div>
                                <div class="info-box">
                                    <div class="info-icon">
                                        <span class="fa fa-paper-plane"></span>
                                    </div>
                                    <div class="info-text pl-3">
                                        <p>
                                            <span class="info-title">Email:</span> <a href="mailto:@hotel.Email">@hotel.Email</a>
                                        </p>
                                    </div>
                                </div>
                                <div class="info-box">
                                    <div class="info-icon">
                                        <span class="fa fa-globe"></span>
                                    </div>
                                    <div class="info-text pl-3">
                                        <p><span class="info-title">Website:</span> <a href="#">@hotel.Website</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7 ct-right d-flex">
                            <div class="contact-wrap p-md-5 p-3">
                                <h3 class="mb-4 ct-title">Get in touch</h3>
                                <form method="POST" action="Contact/SubmitContact" id="contactForm" name="contactForm" class="contactForm">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="label" for="name">First Name</label>
                                                <input type="text" class="form-control ct-control" name="FirstName" id="name">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="label" for="name">Last Name</label>
                                                <input type="text" class="form-control ct-control" name="LastName" id="lastname">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="label" for="email">Email Address</label>
                                                <input type="email" class="form-control ct-control" name="Email" id="email">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="label" for="subject">Phone</label>
                                                <input type="text" class="form-control ct-control" name="Tel" id="phone">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="label" for="subject">Address</label>
                                                <input type="text" class="form-control ct-control" name="Country" id="address">
                                            </div>
                                        </div>

                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="label" for="#">Message</label>
                                                <textarea name="Request" class="form-control" id="message" cols="30"
                                                          rows="4"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="submit" value="Send Message" class="btn contact-btn">

                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
@section script{
    <script>
        $(document).ready(function () {
            $("#contactForm").validate({
                rules: {
                    FirstName: {
                        required: true,
                    },
                    LastName: {
                        required: true,
                    },
                    Email: {
                        required: true,
                    },
                    Tel: {
                        required: true,
                    },
                    Country: {
                        required: true,
                    },
                    Request: {
                        required: true,
                    }
                },
                messages: {
                    FirstName: {
                        required: "Vui lòng nhập họ của bạn",
                    },
                    LastName: {
                        required: "Vui lòng nhập tên của bạn",
                    },
                    Email: {
                        required: "Vui lòng nhập email của bạn",
                    },
                    Tel: {
                        required: "Vui lòng nhập số điện thoại của bạn",
                    },
                    Country: {
                        required: "Vui lòng nhập quốc gia của bạn",
                    },
                    Request: {
                        required: "Vui lòng nhập lời nhắn của bạn",
                    }
                }, submitHandler: function(form){
                    form.submit()
                }
            })
        })
    </script>
    }

