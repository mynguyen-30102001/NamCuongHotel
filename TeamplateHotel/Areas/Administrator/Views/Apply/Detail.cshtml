@model  ProjectLibrary.Database.SendEmailRecuitment
@{
    Layout = "~/Areas/Administrator/Views/Templates/_LayoutPage.cshtml";
}
<div class="span12">
    <div class="widget ">
        <div class="widget-header">
            <i class=" icon-info-sign"></i>
            <h3>Chi tiết ứng tuyển</h3>
            <a href="@Url.Action("Index","Apply")" class="btn btn-primary" style="margin: 5px; float: right;">Quay lại</a>
        </div> <!-- /widget-header -->
        <div class="widget-content">
            <div id="detail-lh">
                <div>
                    <label>Họ tên </label> <p>@Model.FullName</p>
                </div>
                <div>
                    <label>Ngày sinh </label> <p>@Model.Birthday</p>
                </div>
                <div>
                    <label>Giới tính</label> <p>@Model.Gender</p>
                </div>
                <div>
                    <label>Số điện thoại </label> <p>@Model.Phone</p>
                </div>

                <div>
                    <label>Địa chỉ email </label> <p>@Model.Email</p>
                </div>
                <div>
                    <label>Link </label> <p>@Model.Link</p>
                </div>
                <div>
                    <label>File CV </label> <p><a href="~/UploadFile/@Model.File">Xem</a></p>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    #detail-lh div {
        border: 1px solid #ddd;
        margin: 0px;
        border-bottom: none;
        display: block;
        width: 100%;
        float: left;
    }

    #detail-lh div:last-child {
        border-bottom: 1px solid #ddd;
    }

    #detail-lh div p {
        width: 69%;
        float: right;
        border-left: 1px solid #ddd;
        padding: 10px 10px;
        margin: 0px;
    }

    #detail-lh div label {
        width: 28%;
        text-align: right;
        height: 100%;
        display: block;
        float: left;
        font-weight: bold;
        line-height: 32px;
    }
</style>
